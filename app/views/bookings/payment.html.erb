
<div class="content">
  <div class="container">
    <div class="row" id="booking-container-2">
      <div class="col-xs-12 col-sm-offset-3 col-md-4 col-md-offset-4">
        <form action="#">
          <h4 class="text-center"><span>You are about to book your ch√¢teau</span></h4>
          <p class="text-center">Please proceed to payment to secure your booking:</p>
          <div class="form-group">
            <label for="card holder name">Card holder name</label>
            <input id="name" class="form-control" placeholder="Hamish Jolly" type="text">
          </div>
          <div class="form-group">
            <label for="">Card number</label>
            <input id="card number" class="form-control" placeholder="123456..." type="text">
          </div>
          <div class="form-group">
            <label for="CSV number">CSV number</label>
            <input type="text" class="form-control" placeholder="463">
            <div class="form-group">
              <label for="expiration date">Expiration date</label>
              <input type="date" class="form-control" placeholder="25/10/2018">
            </div>
            <center>
              <div class="center">
                <%= link_to "Confirm your Payment", booking_confirmation_path(@booking.id), {class: "btn btn-medium"} %>
              </div>
            </center>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

