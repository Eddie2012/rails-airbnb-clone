<header class="header">
  <% if yield(:navbar) == "home" %>
  <%= render 'shared/header' %>
  <% else %>
  <%= render 'shared/navbar' %>
  <% end %>
</header>

<div class="container">
  <div class="box-img" id="img-1">
    <div class="banner">
      <div class="input-field">
        <%= form_tag chateaus_path, :method => :get do %>
        <ul class="input-list">
          <li><%= text_field_tag :bedrooms, nil, placeholder: "Bedrooms", class: "input-box" %></li>
          <li><%= text_field_tag :area, nil, placeholder: "Area", class: "input-box" %></li>
          <li><%= text_field_tag :price, nil, placeholder: "Price", class: "input-box" %></li>
          <li><%= submit_tag "Search", :name => nil, class: "btn-sp" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
