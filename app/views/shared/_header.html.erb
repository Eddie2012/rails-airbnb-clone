<div class="header-lpchateau">
  <!-- Logo -->
  <%= link_to root_path, class: "header-lpchateau-brand" do %>
  <%= image_tag "visuals/logonovoroundwhite.svg" %>
  <% end %>
<!--   Right Navigation -->
  <div class="header-lpchateau-right hidden-xs hidden-sm">
    <% if user_signed_in? %>

    <!-- Links -->
    <%= link_to "Recently viewed", "#", class: "header-lpchateau-item header-lpchateau-link" %>
    <%= link_to "Saved searches", "#", class: "navbar-lpchateau-item navbar-lpchateau-link" %>
    <!-- Avatar with dropdown menu -->
    <div class="header-lpchateau-item">
      <div class="dropdown">
        <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
        <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "header-lpchateau-menu", "data-toggle" => "dropdown" %>

        <ul class="dropdown-menu dropdown-menu-right header-lpchateau-dropdown-menu">
          <li>
            <%= link_to root_path do %>
            <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_path do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
           <li>
            <%= link_to edit_user_registration_path do %>
            <i class="fa fa-briefcase"></i> <%= t(".bookings", default: "Bookings") %>
            <% end %>
          </li>
          <li class="logout">
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-window-close"></i>  <%= t(".profile", default: "Logout") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <div class="header-lpchateau-link">
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "header-lpchateau-item header-lpchateau-link" %>
    </div>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="header-lpchateau-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right header-lpchateau-dropdown-menu">
      <li>
        <%= link_to edit_user_registration_path do %>
        <i class="fa fa-user"></i> <%= t(".profile", default: "Login | Profile") %>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fa fa-window-close"></i>  <%= t(".profile", default: "Logout") %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
</div>
